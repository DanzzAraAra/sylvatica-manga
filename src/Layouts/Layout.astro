---
import BottomNav from '../components/BottomNav.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
const { title = "Sylvatica" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col relative overflow-x-hidden">
    <div class="fixed top-0 left-0 w-full h-full pointer-events-none z-[-1]" style="background: radial-gradient(circle at 50% -20%, rgba(118, 147, 224, 0.15), transparent 60%);"></div>
    
    <header class="pt-6 px-6 pb-2">
        <div class="flex items-center justify-between max-w-2xl mx-auto">
            <h1 class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-300 to-purple-300 tracking-wide font-serif">Sylvatica</h1>
            <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-blue-500 to-purple-500 opacity-20 animate-pulse"></div>
        </div>
    </header>

    <main class="flex-grow w-full max-w-2xl mx-auto px-5 py-4 pb-32">
      <slot />
    </main>
    
    <BottomNav />
  </body>
</html>
