---
import Layout from '../Layouts/Layout.astro';
---

<Layout title="Register">
  <div class="min-h-screen flex items-center justify-center bg-[#111]">
    <div class="w-full max-w-md p-8 bg-[#1a1b26] rounded-2xl shadow-2xl border border-white/10">
      
      <div id="register-form">
        <h1 class="text-3xl font-bold text-white mb-2 text-center">Create Account</h1>
        <p class="text-gray-400 text-center mb-8">Join the community</p>

        <form id="form-reg" class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">Email</label>
            <input type="email" name="email" required class="w-full bg-[#111] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition">
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">Password</label>
            <input type="password" name="password" required class="w-full bg-[#111] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-blue-500 transition">
          </div>
          
          <button type="submit" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 rounded-lg transition shadow-lg shadow-blue-600/20">
            Sign Up
          </button>
        </form>
        <p class="text-center mt-6 text-gray-400 text-sm">
            Already have an account? <a href="/login" class="text-blue-400 hover:underline">Login</a>
        </p>
      </div>

      <div id="verify-form" class="hidden">
        <h1 class="text-3xl font-bold text-white mb-2 text-center">Verify Email</h1>
        <p class="text-gray-400 text-center mb-8">Check your inbox for the code</p>

        <form id="form-otp" class="space-y-6">
          <input type="hidden" id="hidden-email" name="email">
          <div>
            <label class="block text-sm font-medium text-gray-400 mb-2">OTP Code</label>
            <input type="text" name="otp" required placeholder="123456" class="w-full bg-[#111] border border-white/10 rounded-lg px-4 py-3 text-white text-center text-2xl tracking-widest focus:outline-none focus:border-green-500 transition">
          </div>
          
          <button type="submit" class="w-full bg-green-600 hover:bg-green-500 text-white font-bold py-3 rounded-lg transition shadow-lg shadow-green-600/20">
            Verify & Login
          </button>
        </form>
      </div>

    </div>
  </div>

  <script>
    const regForm = document.getElementById('form-reg');
    const otpForm = document.getElementById('form-otp');
    const regView = document.getElementById('register-form');
    const verifyView = document.getElementById('verify-form');
    const hiddenEmail = document.getElementById('hidden-email');

    regForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(regForm);
      const data = Object.fromEntries(formData);
      const btn = regForm.querySelector('button');
      const originalText = btn.innerText;

      btn.innerText = "Sending OTP...";
      btn.disabled = true;

      const res = await fetch('/api/auth/register', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (res.ok) {
        hiddenEmail.value = data.email;
        regView.classList.add('hidden');
        verifyView.classList.remove('hidden');
      } else {
        alert('Register failed. Email might be taken.');
        btn.innerText = originalText;
        btn.disabled = false;
      }
    });

    otpForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(otpForm);
      const data = Object.fromEntries(formData);
      
      const res = await fetch('/api/auth/verify', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (res.ok) {
        window.location.href = '/login';
      } else {
        alert('Invalid OTP. Please try again.');
      }
    });
  </script>
</Layout>
