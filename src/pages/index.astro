---
import Layout from '../layouts/Layout.astro';

let popularManga = [];
let ongoingManga = [];

try {
    const popRes = await fetch('https://api.jikan.moe/v4/top/manga?filter=bypopularity&limit=6');
    const popData = await popRes.json();
    popularManga = popData.data || [];

    const ongoingRes = await fetch('https://api.jikan.moe/v4/top/manga?filter=publishing&limit=6');
    const ongoingData = await ongoingRes.json();
    ongoingManga = ongoingData.data || [];
} catch (e) {
    console.log("Jikan API Error");
}
---

<Layout title="Home - Sylvatica">
    
    <div class="relative mb-8">
        <input type="text" placeholder="Search manga..." class="w-full bg-white/5 border border-white/10 rounded-xl py-3 pl-10 pr-4 text-sm focus:outline-none focus:border-blue-400/50 transition">
        <svg class="absolute left-3 top-3.5 text-white/30 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
    </div>

    <section class="mb-8">
        <div class="flex justify-between items-end mb-4">
            <h2 class="text-lg font-bold text-blue-100">Most Popular</h2>
            <span class="text-[10px] text-blue-300/50 uppercase tracking-wider">Top Rated</span>
        </div>
        
        <div class="flex overflow-x-auto gap-4 pb-4 -mx-5 px-5 snap-x">
            {popularManga.map((manga) => (
                <a href={`/manga/${manga.mal_id}`} class="snap-center shrink-0 w-32 group relative">
                    <div class="w-32 h-48 rounded-lg overflow-hidden border border-white/10 shadow-lg">
                        <img src={manga.images.webp.image_url} class="w-full h-full object-cover group-hover:scale-110 transition duration-500" loading="lazy">
                    </div>
                    <p class="mt-2 text-xs font-semibold text-white truncate">{manga.title}</p>
                    <p class="text-[10px] text-white/40">{manga.score} â˜…</p>
                </a>
            ))}
        </div>
    </section>

    <section>
        <div class="flex justify-between items-end mb-4">
            <h2 class="text-lg font-bold text-purple-100">Hot Ongoing</h2>
            <span class="text-[10px] text-purple-300/50 uppercase tracking-wider">Publishing</span>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
            {ongoingManga.map((manga) => (
                <a href={`/manga/${manga.mal_id}`} class="flex gap-3 bg-white/5 p-2 rounded-xl border border-white/5 hover:bg-white/10 transition">
                    <img src={manga.images.webp.image_url} class="w-16 h-24 object-cover rounded-lg shrink-0">
                    <div class="flex flex-col justify-center min-w-0">
                        <h3 class="text-xs font-bold text-white line-clamp-2 leading-tight mb-1">{manga.title}</h3>
                        <div class="flex items-center gap-1 mb-2">
                             <span class="text-[10px] bg-blue-500/20 text-blue-200 px-1.5 py-0.5 rounded">{manga.type}</span>
                        </div>
                        <p class="text-[10px] text-white/30 truncate">{manga.authors[0]?.name}</p>
                    </div>
                </a>
            ))}
        </div>
    </section>

</Layout>