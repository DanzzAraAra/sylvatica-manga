---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Login">
    <div class="max-w-sm mx-auto mt-10 glass-panel p-8 rounded-xl">
        <h2 class="text-2xl font-bold text-center mb-6 text-blue-100">Welcome Back</h2>
        <form id="loginForm" class="flex flex-col gap-4">
            <div class="input-field">
                <input type="email" name="email" placeholder="Email" required class="bg-black/30 w-full p-3 rounded-lg border border-white/10 text-white placeholder-white/30 text-sm focus:border-blue-500 outline-none">
            </div>
            <div class="input-field">
                <input type="password" name="password" placeholder="Password" required class="bg-black/30 w-full p-3 rounded-lg border border-white/10 text-white placeholder-white/30 text-sm focus:border-blue-500 outline-none">
            </div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-500 text-white py-3 rounded-lg font-bold text-sm transition mt-2 shadow-lg shadow-blue-900/40">Login</button>
        </form>
        <p class="text-center mt-6 text-xs text-white/50">Don't have an account? <a href="/register" class="text-blue-300 hover:underline">Register</a></p>
    </div>
    <script>
        document.getElementById('loginForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = Object.fromEntries(new FormData(e.target));
            try {
                const res = await fetch('/api/auth/login', {
                    method: 'POST',
                    body: JSON.stringify(formData)
                });
                const data = await res.json();
                if(res.ok) {
                    localStorage.setItem('userId', data.userId);
                    window.location.href = '/profile';
                } else {
                    alert(data.msg);
                }
            } catch(err) { alert("Login failed"); }
        });
    </script>
</Layout>